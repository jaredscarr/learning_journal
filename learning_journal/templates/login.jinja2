{% extends "base.jinja2" %}
{% block header %}
    <nav>
        <ul>
            {% if request.has_permission('edit') %}
                <li><a class="button" href="/">Home</a></li>
                <li><a class="button" href="/add_entry">Add</a></li>
                <li><a class="button" href="/logout">Logout</a></li>
            {% else %}
                <li><a class="button" href="/">Home</a></li>
                <li><a class="button" href="/login">Login</a></li>
            {% endif %}
        </ul>
    </nav>
{% endblock %}
{% block body %}
<section>
        <form action="" method="POST">
            <div class="row">
                <div class="one column"></div>
                <div class="five columns">
                    <label for="login">Login</label>
                    <input class="u-full-width" type="text" name="username" placeholder="email" 
                    id="login" required>
                </div>
                <div class="six columns"></div>
            </div>
            <div class="row">
                <div class="one column"></div>
                <div class="five columns">
                    <label for="password">Password</label>
                    <input class="u-full-width" name="password" type="password" placeholder="Password" id="password">
                </div>
            </div>
            <input class="button-primary" type="submit" value="Submit">
        </form>
    </section>
{% endblock %}
